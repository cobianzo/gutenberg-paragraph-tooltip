{
	"eslint.enable": true,
	"eslint.run": "onType",
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"eslint.format.enable": true,
  "typescript.tsdk": "node_modules/typescript/lib",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"files.trimTrailingWhitespace": false,
	"[markdown]": {
		"files.trimTrailingWhitespace": false
	},
	"editor.formatOnSave": false,
	"[php]": {
		"editor.formatOnSave": false
	}
}
